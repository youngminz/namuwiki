{
    "manifest_version": 2,
    "name": "나무위키",
    "description": "리그베다 위키, 엔하위키 미러 혹은 미러로 접속하면 자동으로 나무위키의 동일한 항목으로 리다이렉션합니다.",
    "version": "0.4.2",
    "icons": {
        "128": "logo.png"
    },
    "permissions": [
        "*://mirror.enha.kr/*",
        "*://rigvedawiki.net/*",
        "*://mir.pe/*",
        "*://namu.moe/*",
        "*://www.google.com/*",
        "*://www.google.co.kr/*",
        "storage"
    ],
    "content_scripts": [
        {
            "matches": [
                "*://enha.kr/*",
                "*://*.enha.kr/*",
                "*://rigvedawiki.net/*",
                "*://*.rigvedawiki.net/*",
                "*://mir.pe/*",
                "*://*.mir.pe/*",
                "*://namu.moe/*",
                "*://*.namu.moe/*"
            ],
            "js": [
                "background.js"
            ]
        },
        {
            "matches": [
                "*://www.google.com/*",
                "*://www.google.co.kr/*"
            ],
            "js": [
                "google_result.js"
            ]
        }
    ],
    "options_page": "options/options.html"
}
